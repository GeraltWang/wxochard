}
.sbm {
  width: 100%;
  height: 100rpx;
  display: grid;
  grid-template-columns: 21% 28% 24% 27%;
  grid-auto-rows: 100rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  bottom: 0;
  font-size: 13px;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.sbm .cb {
  place-self: center;
}
.sbm .p {
  place-self: center;
}
.sbm .w {
  place-self: center;
}
.detail-item {
  width: 100%;
  height: 220rpx;
