  left: 0;
}
.scroll-list {
  height: 1134rpx;
  position: relative;
  top: 50rpx;
}
.scroll-list .cardd {
  width: 100%;
}
.scroll-list .cardd text {
  font-size: 14px;
}
.scroll-list .pro-check {
